<Window
    x:Class="HideezSafe.Views.NotificationsContainerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HideezSafe.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HideezSafe.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    AllowsTransparency="True"
    Background="Transparent"
    DataContext="{Binding NotificationsContainer, Mode=OneWay, Source={StaticResource Locator}}"
    Loaded="Window_Loaded"
    ShowActivated="False"
    ShowInTaskbar="False"
    SizeToContent="Width"
    Focusable="False"
    Topmost="True"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./../Controls/Notification/NotificationResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <ItemsControl
        x:Name="notifyItems"
        Margin="10"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Focusable="False"
        ItemsSource="{Binding Items}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
</Window>
