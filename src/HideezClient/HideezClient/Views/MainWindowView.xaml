<Metro:MetroWindow
    x:Class="HideezClient.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:controls="clr-namespace:HideezClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    xmlns:local="clr-namespace:HideezClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modules="clr-namespace:HideezClient.Modules"
    xmlns:pagesview="clr-namespace:HideezClient.PagesView"
    xmlns:pagesviewmodel="clr-namespace:HideezClient.PageViewModels"
    Title="{Binding Version, StringFormat=Hideez Client ({0})}"
    Width="1075"
    Height="770"
    MinWidth="1020"
    MinHeight="700"
    MaxWidth="1280"
    MaxHeight="770"
    Closing="MetroWindow_Closing"
    DataContext="{Binding MainViewModel, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource WindowStyle}"
    TitleCharacterCasing="Normal"
    Visibility="Visible"
    WindowTitleBrush="{DynamicResource WindowTitleBrush}"
    mc:Ignorable="d">
    <Grid Focusable="False" SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="300"
                MinWidth="280"
                MaxWidth="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid VerticalAlignment="Stretch" Background="{DynamicResource WindowLeftColumBrush}">

            <Grid.RowDefinitions>
                <!--  1 DevicesExpander  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!--  3  Menu  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="18" />
                <!--  5 Separator  -->
                <RowDefinition Height="1" />
                <RowDefinition Height="Auto" />
                <!--  6 ConnectivityIndicators  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1">

                <TextBlock
                    Margin="16,16,30,16"
                    Text="{l:Localization Info.NoDevice}"
                    Visibility="{Binding SelectedDevice, Converter={StaticResource NullToVisibilityCollapsedConverter}}" />

                <RadioButton Visibility="{Binding SelectedDevice, Converter={StaticResource NullToVisibilityConverter}}">
                    <RadioButton.Style>
                        <Style BasedOn="{StaticResource BaseLeftColumMenuStyle}" TargetType="{x:Type RadioButton}">
                            <Setter Property="Command" Value="{Binding MenuAboutDevice.Command}" />
                            <Setter Property="IsChecked" Value="{Binding MenuAboutDevice.IsChecked}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter DataContext="{TemplateBinding DataContext}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource LeftColumMenuActiveBrush}" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True" />
                                        <Condition Property="IsChecked" Value="False" />
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.Setters>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Offset="1.0" Color="#22446D" />
                                                    <GradientStop Offset="0.1" Color="#22446d" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Cursor" Value="Hand" />
                                    </MultiTrigger.Setters>
                                </MultiTrigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsChecked" Value="False" />
                                        <Condition Property="IsPressed" Value="True" />
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.Setters>
                                        <Setter Property="Background" Value="#22446D" />
                                        <Setter Property="Opacity" Value="0.5" />
                                    </MultiTrigger.Setters>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                    <controls:DeviceInfo
                        Padding="16,16,30,16"
                        VerticalAlignment="Top"
                        DataContext="{Binding SelectedDevice}" />
                </RadioButton>

                <Border Visibility="Visible">
                    <RadioButton
                        DataContext="{Binding MenuPasswordManager}"
                        IsChecked="True"
                        Style="{DynamicResource LeftColumMenuStyle}"
                        Tag="LockSolid" />
                </Border>
            </StackPanel>

            <!--  Menu  -->
            <StackPanel Grid.Row="2">
                <RadioButton
                    DataContext="{Binding MenuDefaultPage}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Visibility="Collapsed" />
                <RadioButton
                    DataContext="{Binding MenuHelp}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Tag="QuestionCircleSolid" />

                <Rectangle Height="10" />
                <RadioButton
                    DataContext="{Binding MenuSettings}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Tag="CogSolid" />
            </StackPanel>

            <Rectangle
                Grid.Row="4"
                Width="265"
                Fill="{DynamicResource WindowBackground}"
                Opacity="0.05" />

            <controls:ConnectivityIndicators
                Grid.Row="6"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Focusable="False" />
        </Grid>

        <!--  page content  -->
        <Border
            Grid.Column="1"
            Background="{DynamicResource WindowBackground}"
            BorderBrush="Transparent"
            CornerRadius="8,0,0,0">
            <Frame
                Name="MainAPpFrame"
                BorderThickness="0"
                Focusable="False"
                NavigationUIVisibility="Hidden"
                Source="{Binding Path=DisplayPage, Mode=TwoWay}" />
        </Border>
    </Grid>
</Metro:MetroWindow>
