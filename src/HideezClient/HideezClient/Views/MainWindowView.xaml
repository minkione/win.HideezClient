<Metro:MetroWindow
    x:Class="HideezClient.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:controls="clr-namespace:HideezClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    xmlns:local="clr-namespace:HideezClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modules="clr-namespace:HideezClient.Modules"
    xmlns:pagesview="clr-namespace:HideezClient.PagesView"
    xmlns:pagesviewmodel="clr-namespace:HideezClient.PageViewModels"
    Title="{Binding Version, StringFormat=Hideez Client ({0})}"
    Width="1075"
    Height="770"
    MinWidth="1020"
    MinHeight="700"
    MaxWidth="1280"
    MaxHeight="770"
    Closing="MetroWindow_Closing"
    DataContext="{Binding MainViewModel, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource WindowStyle}"
    TitleCharacterCasing="Normal"
    Visibility="Visible"
    WindowTitleBrush="{DynamicResource WindowTitleBrush}"
    mc:Ignorable="d">
    <Grid Focusable="False" SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="300"
                MinWidth="280"
                MaxWidth="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid VerticalAlignment="Stretch" Background="{DynamicResource WindowLeftColumBrush}">

            <Grid.RowDefinitions>
                <!--  1 DevicesExpander  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!--  3  Menu  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="18" />
                <!--  5 Separator  -->
                <RowDefinition Height="1" />
                <RowDefinition Height="Auto" />
                <!--  6 ConnectivityIndicators  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1">

                <StackPanel
                    Margin="24,34"
                    Orientation="Vertical"
                    Visibility="{Binding SelectedDevice, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                    <TextBlock
                        FontSize="18"
                        FontWeight="DemiBold"
                        Text="{l:Localization EnableDevice.Header}" />
                    <Rectangle Height="24" />
                    <Grid TextBlock.FontSize="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="16" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="16" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Text="1." />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Opacity="0.5"
                            Text="{l:Localization EnableDevice.Step1}"
                            TextWrapping="Wrap" />
                        <TextBlock Grid.Row="2" Text="2." />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Opacity="0.5"
                            Text="{l:Localization EnableDevice.Step2}"
                            TextWrapping="Wrap" />
                        <TextBlock Grid.Row="4" Text="2." />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Opacity="0.5"
                            Text="{l:Localization EnableDevice.Step3}"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>

                <StackPanel Visibility="{Binding SelectedDevice, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}">
                    <controls:DeviceInfo
                        Padding="16,16,30,16"
                        VerticalAlignment="Top"
                        DataContext="{Binding SelectedDevice}" />
                    <RadioButton
                        Metro:VisibilityHelper.IsVisible="{Binding IsConnected}"
                        DataContext="{Binding MenuAboutDevice}"
                        Style="{DynamicResource LeftColumMenuStyle}"
                        Tag="LockSolid" />
                    <Border>
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedDevice.IsAuthorized}" Value="True" />
                                            <Condition Binding="{Binding SelectedDevice.IsStorageLoaded}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <RadioButton
                            DataContext="{Binding MenuPasswordManager}"
                            Style="{StaticResource LeftColumMenuStyle}"
                            Tag="LockSolid" />

                    </Border>
                </StackPanel>
            </StackPanel>

            <!--  Menu  -->
            <StackPanel Grid.Row="2">
                <RadioButton
                    DataContext="{Binding MenuDefaultPage}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Visibility="Collapsed" />

                <RadioButton
                    DataContext="{Binding MenuHelp}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Tag="QuestionCircleSolid" />

                <Rectangle Height="10" />
                <RadioButton
                    DataContext="{Binding MenuSettings}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Tag="CogSolid" />
            </StackPanel>

            <Rectangle
                Grid.Row="4"
                Width="265"
                Fill="{DynamicResource WindowBackground}"
                Opacity="0.05" />

            <controls:ConnectivityIndicators
                Grid.Row="6"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Focusable="False" />
        </Grid>

        <!--  page content  -->
        <Border
            Grid.Column="1"
            Background="{DynamicResource WindowBackground}"
            BorderBrush="Transparent"
            ClipToBounds="True"
            CornerRadius="8,0,0,0">
            <Frame
                Name="MainAPpFrame"
                BorderThickness="0"
                Focusable="False"
                NavigationUIVisibility="Hidden"
                Source="{Binding Path=DisplayPage, Mode=TwoWay}" />
        </Border>
    </Grid>
</Metro:MetroWindow>
