<Metro:MetroWindow
    x:Class="HideezClient.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:controls="clr-namespace:HideezClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    xmlns:local="clr-namespace:HideezClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modules="clr-namespace:HideezClient.Modules"
    xmlns:pagesview="clr-namespace:HideezClient.PagesView"
    xmlns:pagesviewmodel="clr-namespace:HideezClient.PageViewModels"
    Title="{Binding Version, StringFormat=Hideez Client ({0})}"
    Width="1075"
    Height="770"
    MinWidth="1020"
    MinHeight="700"
    MaxWidth="1280"
    MaxHeight="770"
    Closing="MetroWindow_Closing"
    DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource WindowStyle}"
    TitleCharacterCasing="Normal"
    Visibility="Visible"
    WindowTitleBrush="{DynamicResource WindowTitleBrush}"
    mc:Ignorable="d">
    <Grid Focusable="False" SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="300"
                MinWidth="280"
                MaxWidth="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid VerticalAlignment="Stretch">

            <Grid.RowDefinitions>
                <!--  1 DevicesExpander  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!--  3  Menu  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="18" />
                <!--  5 Separator  -->
                <RowDefinition Height="1" />
                <RowDefinition Height="Auto" />
                <!--  6 ConnectivityIndicators  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:DevicesExpander
                Grid.Row="0"
                VerticalAlignment="Top"
                Background="{DynamicResource DevicesStackBrush}" />

            <Rectangle
                Grid.Row="1"
                Grid.RowSpan="6"
                Fill="{DynamicResource WindowLeftColumBrush}" />

            <StackPanel Grid.Row="2">
                <RadioButton
                    Command="{Binding OpenHelpCommand}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Tag="QuestionCircleSolid">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="Help" />
                </RadioButton>

                <Rectangle Height="10" />
                <RadioButton
                    Command="{Binding OpenSettingsCommand}"
                    Style="{DynamicResource LeftColumMenuStyle}"
                    Tag="CogSolid">
                    <TextBlock VerticalAlignment="Top" Text="Settings" />
                </RadioButton>
            </StackPanel>

            <Rectangle
                Grid.Row="4"
                Width="265"
                Fill="{DynamicResource WindowBackground}"
                Opacity="0.05" />

            <controls:ConnectivityIndicators
                Grid.Row="6"
                Margin="24"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Focusable="False" />
        </Grid>

        <!--  page content  -->
        <Frame
            Name="MainAPpFrame"
            Grid.Column="1"
            BorderThickness="0"
            Focusable="False"
            NavigationUIVisibility="Hidden"
            Source="{Binding Path=DisplayPage, Mode=TwoWay}" />

    </Grid>
</Metro:MetroWindow>
