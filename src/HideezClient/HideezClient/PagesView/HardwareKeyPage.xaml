<Page
    x:Class="HideezClient.PagesView.HardwareKeyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    xmlns:local="clr-namespace:HideezClient.PagesView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HardwareKeyPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding HardwareKeyPageViewModel, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource PageStyle}"
    mc:Ignorable="d">
    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        TextBlock.FontSize="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <!--  1 line  -->
        <ContentPresenter
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="65"
            Height="65"
            Content="{StaticResource PCandKeyImg}" />

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="0,8"
            FontWeight="DemiBold"
            Foreground="{DynamicResource DarkForeground}"
            Text="{l:Localization DP.Proximity.Header}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Text="{l:Localization DP.Proximity.Description}"
            TextWrapping="Wrap" />

        <!--  2 line  -->
        <ContentPresenter
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="65"
            Height="65"
            Content="{StaticResource PapcaImg}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Margin="0,8"
            FontWeight="DemiBold"
            Foreground="{DynamicResource DarkForeground}"
            Text="{l:Localization DP.PM.Header}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Text="{l:Localization DP.PM.Description}"
            TextWrapping="Wrap" />

        <!--  3 line  -->
        <ContentPresenter
            Grid.Row="6"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="65"
            Height="65"
            Content="{StaticResource TwoFactorAuthenticationImg}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Margin="0,8"
            FontWeight="DemiBold"
            Foreground="{DynamicResource DarkForeground}"
            Text="{l:Localization DP.2F.Header}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="2"
            Text="{l:Localization DP.2F.Description}"
            TextWrapping="Wrap" />

    </Grid>
</Page>
