<Page
    x:Class="HideezClient.PagesView.PasswordManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adorners="http://gu.se/Adorners"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    xmlns:local="clr-namespace:HideezClient.PagesView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PasswordManagerPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding PasswordManager, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>

        <Style
            x:Key="SeparatorOfAccountInfo"
            BasedOn="{StaticResource SeparatorStyle}"
            TargetType="{x:Type Separator}">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,24" />
        </Style>

        <SolidColorBrush x:Key="Item.MouseOver.Background" Color="#E1F3F8" />
        <SolidColorBrush x:Key="Item.Selected.Background" Color="#CCEBF4" />

        <Style x:Key="ListViewContainerStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <StackPanel
                            x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="true">
                            <Separator x:Name="Separator" Style="{DynamicResource SeparatorStyle}" />
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                <Setter TargetName="Separator" Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.MouseOver.Background}" />
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsSelected" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Cursor" Value="Hand" />
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.Selected.Background}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="AnimationShowAccountInfo">
            <DoubleAnimation
                Storyboard.TargetName="MoveAccountInfo"
                Storyboard.TargetProperty="X"
                To="0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="AnimationHideAccountInfo">
            <DoubleAnimation
                Storyboard.TargetName="MoveAccountInfo"
                Storyboard.TargetProperty="X"
                To="516"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

    </Page.Resources>

    <Grid Margin="16,16,16,0" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Search  -->
        <StackPanel Margin="4,4,0,16" Orientation="Horizontal">
            <iconPacks:PackIconFontAwesome
                VerticalAlignment="Center"
                Foreground="{StaticResource LeftColumMenuActiveBrush}"
                Kind="SearchSolid" />
            <Rectangle Width="12" />
            <TextBox
                Width="400"
                VerticalAlignment="Center"
                adorners:Watermark.Text="{l:Localization WaterMark.Search}"
                adorners:Watermark.TextStyle="{StaticResource AdornerTextStyle}"
                adorners:Watermark.VisibleWhen="EmptyAndNotKeyboardFocused"
                Background="Transparent"
                BorderThickness="0"
                CaretBrush="{DynamicResource DarkForeground}"
                FocusVisualStyle="{x:Null}"
                FontSize="16"
                Foreground="{DynamicResource DarkForeground}"
                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Separator Style="{DynamicResource SeparatorStyle}" />

            <TextBlock
                Margin="0,12,0,18"
                Foreground="{DynamicResource DarkForeground}"
                Opacity="0.3"
                Text="{l:Localization PM.Label.Account}"
                Typography.Capitals="AllPetiteCaps" />
        </StackPanel>

        <ListView
            x:Name="AccountsList"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Background="Transparent"
            Focusable="False"
            ItemContainerStyle="{StaticResource ListViewContainerStyle}"
            ItemsSource="{Binding Accounts}"
            SelectedItem="{Binding SelectedAccount}"
            SelectionChanged="AccountsList_SelectionChanged"
            SelectionMode="Single">

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ToggleButton
                        x:Name="AccountItem"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FocusVisualStyle="{x:Null}"
                        IsChecked="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=IsSelected}">
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="{DynamicResource DarkForeground}"
                                Text="{Binding Name}" />
                            <TextBlock
                                Margin="0,4,0,9"
                                FontSize="12"
                                Foreground="#6E89A4"
                                Text="{Binding Login}" />
                        </StackPanel>
                    </ToggleButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>

        <StackPanel
            x:Name="AccountInfo"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="0,1,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Orientation="Horizontal">
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="MoveAccountInfo" X="516" />
            </StackPanel.RenderTransform>
            <Border
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Background="#F4FEFF">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="27"
                        Direction="-75"
                        Opacity="0.8"
                        ShadowDepth="2"
                        Color="Black" />
                </Border.Effect>
            </Border>
            <Border
                Width="500"
                Padding="24"
                Background="#F4FEFF"
                DataContext="{Binding ElementName=AccountsList, Path=SelectedItem}">

                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Foreground" Value="{StaticResource Foreground}" />
                            <Setter Property="FontSize" Value="14" />
                        </Style>
                        <Style x:Key="LabelValuesStyle" TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="FontWeight" Value="DemiBold" />
                            <Setter Property="Foreground" Value="{StaticResource DarkForeground}" />
                            <Setter Property="FontSize" Value="16" />
                        </Style>
                    </Grid.Resources>

                    <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DarkForeground}"
                            Text="{Binding Name}" />
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontSize="13"
                            Foreground="#6E89A4"
                            Text="{Binding Login}" />
                    </StackPanel>

                    <!--  Separator  -->
                    <Separator
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Style="{DynamicResource SeparatorOfAccountInfo}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource LabelStyle}"
                        Text="{l:Localization PM.Label.Login}" />
                    <Rectangle Width="24" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Style="{StaticResource LabelValuesStyle}"
                        Text="{Binding Login}" />

                    <!--  Separator  -->
                    <Separator
                        Grid.Row="3"
                        Grid.ColumnSpan="3"
                        Style="{DynamicResource SeparatorOfAccountInfo}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Style="{StaticResource LabelStyle}"
                        Text="{l:Localization PM.Label.AppsAndUrls}" />
                    <Rectangle Width="24" />
                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        TextBlock.FontSize="16"
                        TextBlock.FontWeight="DemiBold"
                        TextBlock.Foreground="#0074FF">
                        <ItemsControl ItemsSource="{Binding Apps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <ItemsControl ItemsSource="{Binding Urls}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Separator  -->
                    <Separator
                        Grid.Row="5"
                        Grid.ColumnSpan="3"
                        Style="{DynamicResource SeparatorOfAccountInfo}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Style="{StaticResource LabelStyle}"
                        Text="{l:Localization PM.Label.Otp}" />
                    <Rectangle Width="24" />
                    <TextBlock Grid.Row="6" Grid.Column="2">
                        <TextBlock.Style>
                            <Style BasedOn="{StaticResource LabelValuesStyle}" TargetType="TextBlock">
                                <Setter Property="Text" Value="{l:Localization PM.Otp.Disabled}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasOpt}" Value="True">
                                        <Setter Property="Text" Value="{l:Localization PM.Otp.Enabled}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Button
                        Grid.Row="8"
                        HorizontalAlignment="Left"
                        Command="{Binding EditAccountCommand}"
                        Content="Edit"
                        Style="{DynamicResource ChangeButtonStyle}" />
                </Grid>
            </Border>
        </StackPanel>

        <Button
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding AddAccountCommand}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="#F4FEFF" />
                    <Setter Property="Background" Value="#FC3085" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Padding" Value="8" />
                    <Setter Property="FontSize" Value="32" />
                    <Setter Property="Margin" Value="32" />

                    <Setter Property="BitmapEffect">
                        <Setter.Value>
                            <DropShadowBitmapEffect
                                Direction="280"
                                Opacity="0.5"
                                ShadowDepth="10"
                                Softness="1"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    x:Name="border"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="32">
                                    <Grid>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        <Border
                                            x:Name="horizontalButtonLine"
                                            Width="32"
                                            Height="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Background="#F4FEFF"
                                            CornerRadius="2" />

                                        <Border
                                            x:Name="verticalButtonLine"
                                            Width="4"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Background="#F4FEFF"
                                            CornerRadius="2" />
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F8FEFF" />
                                        <Setter TargetName="horizontalButtonLine" Property="Background" Value="#F6346B" />
                                        <Setter TargetName="verticalButtonLine" Property="Background" Value="#F6346B" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>
